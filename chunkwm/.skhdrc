# enter fullscreen mode for the focused container
alt - f : chunkc tiling::window --toggle fullscreen

# change focus between tiling / floating windows
shift + alt - space : chunkc tiling::window --toggle float

# change layout of desktop
alt - e : chunkc tiling::desktop --layout bsp
alt - s : chunkc tiling::desktop --layout monocle

# kill focused window
shift + alt - q : chunkc tiling::window --close

# change focus
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

# change monitor focus
alt - n : chunkc tiling::monitor -f next

# move focused window
shift + alt - h : chunkc tiling::window --warp west
shift + alt - j : chunkc tiling::window --warp south
shift + alt - k : chunkc tiling::window --warp north
shift + alt - l : chunkc tiling::window --warp east

alt - r : chunkc tiling::desktop --rotate 270
shift + alt - r : chunkc tiling::desktop --rotate 90

# send window to monitor and follow focus
shift + alt - n : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop); chunkc tiling::monitor -f $(chunkc get _last_active_desktop)
# shift + alt - n  : chunkc tiling::window --send-to-desktop prev; chunkc tiling::desktop -f prev
# shift + alt - n  : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2
# shift + alt - m  : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1

# resize tiling by moving region borders
cmd + alt - h : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge west; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east
cmd + alt - j : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge south; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge north
cmd + alt - k : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge north; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge south
cmd + alt - l : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge east; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west
